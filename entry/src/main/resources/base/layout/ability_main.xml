<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$graphic:background_ability_main"

    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:weight="1"
        ohos:background_element="$graphic:background_ability_landing"
        >
        <Button
            ohos:id="$+id:btn_decrement"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:top_padding="100px"
            ohos:text="-"
            ohos:layout_alignment="horizontal_center|bottom"
            ohos:text_alignment="horizontal_center|bottom"
            ohos:text_size="80px"
            ohos:text_color="#FFFFFF"
            />
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="100px"
            ohos:weight="1"
            ohos:orientation="vertical"
            >
            <Text
                ohos:id="$+id:txt_marking"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:weight="1"
                ohos:layout_alignment="horizontal_center|bottom"
                ohos:text_alignment="center"
                ohos:text_color="#FFFFFF"/>
            <TextField
                ohos:id="$+id:txt_tempo"

                ohos:height="match_parent"
                ohos:width="100px"
                ohos:weight="1"
                ohos:background_element="$graphic:background_ability_main"
                ohos:layout_alignment="horizontal_center|bottom"
                ohos:text_alignment="center"
                ohos:multiple_lines="false"
                ohos:text="66"
                ohos:text_input_type="pattern_number"
                ohos:basement="#000099"
                ohos:bubble_height="10"
                ohos:bubble_width="10"
                ohos:text_size="50"
                ohos:text_color="#FFFFFF"
                />
        </DirectionalLayout>
        <Button
            ohos:id="$+id:btn_increment"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:top_padding="100px"
            ohos:text="+"
            ohos:layout_alignment="horizontal_center|bottom"
            ohos:text_alignment="horizontal_center|bottom"
            ohos:text_size="80px"
            ohos:text_color="#FFFFFF"
            />
    </DirectionalLayout>
    <Button
        ohos:id="$+id:btn_tick"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:weight="1"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="bottom|horizontal_center"
        ohos:bottom_padding="80px"
        ohos:text="$string:lbl_start"
        ohos:text_size="50"
        ohos:text_color="#FFFFFF"
        />

</DirectionalLayout>